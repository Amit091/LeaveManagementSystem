<% if(typeof errors != 'undefined'){ %>
<% errors.forEach(function(error) { %>
<div class="alert alert-warning alert-dismissible fade show shadow customMsg" role="alert">
    <%= error.msg %>
    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
        <span aria-hidden="true">&CircleTimes;</span>
    </button>
</div>
<% }); %>
<% } %>

<% if(success_msg != ''){ %>
<div class="alert alert-success alert-dismissible fade show shadow customMsg" role="alert">
    <%= success_msg %>
    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
</div>
<% } %>


<% if(warning_msg != ''){ %>
<div class="alert alert-warning alert-dismissible fade shadow show customMsg" role="alert">
    <%= warning_msg %>
    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
</div>
<% } %>

<% if(error_msg != ''){ %>
<div class="alert alert-danger alert-dismissible fade show shadow customMsg" role="alert">
    <%= error_msg %>
    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
</div>
<% } %>



<% if(error != ''){ %>
<div class="alert alert-danger alert-dismissible fade show shadow customMsg" role="alert">
    <%= error %>
    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
</div>
<% } %>


<script>
    $(document).ready(function () {
        $('.toast').toast('show');
    });
    setTimeout(() => {
        $('div.customMsg').hide('slow');
    }, 2000);
</script>