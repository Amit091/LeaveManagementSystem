<% include ./../layouts/layoutheader%>
<!-- Custom styles for dashboard-->
<link href="/css/change.css" rel="stylesheet">
<!-- Breadcrumbs-->
<ol class="breadcrumb">
    <li class="breadcrumb-item">
        <a href="#">Dashboard</a>
    </li>
    <li class="breadcrumb-item active">holiday</li>
</ol>
<div class="card ml-5" style="width: 25rem;">
    <div class="card-header">
        Leave
    </div>
    <div class="card-body">
        <form action="/leave/leaveType" method="post">
            <div class="form-group ">
                <label></label>
                <div class="form-group">
                    <label for="exampleInputEmail1">Name:</label>
                    <input type="text" class="form-control" value=name name=name
                        placeholder="number of day leave employee will be allowed" required>
                </div>

                <div class="form-group">
                    <label>Number of Days:</label>
                    <input type="number" class="form-control" value=number name=number
                        placeholder="name of the holiday event" min="1" max="100">
                </div>



                <div class="form-group">
                    <label for="exampleInputEmail1">Description:</label>
                    <textarea class="form-control" cols="30" rows="5" value=description name=description
                        placeholder="desciption for the type of leave" required></textarea>
                </div>


            </div>
            <div class="justify-content-end">
                <button type="submit" class="btn btn-primary float-left">Add</button>
                <button type="submit" class="btn btn-danger float-right">Discard</button>
            </div>
        </form>


    </div>
</div>

