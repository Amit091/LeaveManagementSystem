<!-- Breadcrumbs-->
<ol class="breadcrumb ">
    <li class="breadcrumb-item ">
        <a href="/">Dashboard</a>
    </li>
    <li class="breadcrumb-item active">Add Holiday</li>
</ol>
<div class="row">
    <div class="col-md-6">
        <div>
            <% include ./allholidays.ejs%>
        </div>
    </div>
    <div class="col-md-6">
        <div class="card ml-5" style="width: 25rem;">
            <div class="card-header bg-card-head">
                Add Holidays
            </div>
            <div class="card-body bg-card-body">
                <form id="product-form" action="/leave/addholidays" method="post">
                    <div class="form-group ">

                        <div class="form-group">
                            <label for="exampleInputEmail1">Name:</label>
                            <input type="text" name="name" id="holiday_type" class="form-control"
                                id="exampleInputEmail1" aria-describedby="emailHelp"
                                placeholder="name of the holiday event" required>
                        </div>
                        <div>

                            <div class="from-group box">
                                <select class="custom-select form-control" id="holidaytype" name="holidaypicker"
                                    required>
                                    <option selected value="0">Choose holiday</option>
                                    <option value="Public Holiday">Public Holiday</option>
                                    <option value="Floating Holiday">Floating Holiday</option>
                                </select>
                            </div>

                            <div class="form-group">
                                <br>
                                <label for="date">Date:</label>
                                <input type="date" id="date" name="date" class="form-control holiday-name
                                " value="" required>
                            </div>

                            <div class="form-group">
                                <label for="description">Description:</label>
                                <textarea class="form-control" cols="30" name="description" rows="5" id="description"
                                    required></textarea>
                            </div>


                        </div>
                        <div class="justify-content-end">
                            <button type="submit" class="btn btn-primary float-left">Submit</button>
                            <button type="submit" class="btn btn-danger float-right">Discard</button>
                        </div>

                    </div>
                </form>


            </div>
        </div>
    </div>

</div>




<script>
    $(document).ready(function () {


        var now = getDate('today');
        var maxDate = getDate('maxdate') + '-' + '03' + '-' + '31';
        var date = new Date();
        var year = date.getFullYear();
        var mini = year + '-' + '04' + '-' + '01';



        $('#date').mouseenter(function () {
            $('#date').val(now)
            $('#date').attr('max', maxDate);
            $('#date').attr('min', mini);
        })


        function getDate(status) {
            var now = new Date();
            var month = (now.getMonth() + 1);
            var day = now.getDate();
            if (month < 10)
                month = "0" + month;
            if (day < 10)
                day = "0" + day;
            var today = now.getFullYear() + '-' + month + '-' + day;
            if (status === "today") return today;
            if (status === "maxdate") return now.getFullYear() + 1;
            else '';
        }

        $(function () {

            $('#holiday_sadsa').keydown(function (e) {

                if (e.shiftKey || e.ctrlKey || e.altKey) {

                    e.preventDefault();

                } else {

                    var key = e.keyCode;

                    if (!((key == 8) || (key == 32) || (key == 46) || (key >= 35 && key <= 40) || (key >= 65 && key <= 90))) {

                        e.preventDefault();

                    }

                }

            });

        });
    })





</script>
